<skin>

    <!-- com.alee.laf.colorchooser.WebColorChooser -->

    <!-- Color chooser -->
    <style type="colorChooser" id="default">
        <component>
            <opaque>false</opaque>
        </component>
    </style>

    <!-- Main content panel -->
    <style type="panel" id="colorchooser" extends="default" padding="2,5,2,5">
        <component>
            <opaque>false</opaque>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebPanelPainter">
            <webColoredBackground>false</webColoredBackground>
        </painter>
    </style>

    <!-- Field title labels -->
    <style type="label" id="colorchooser-label" extends="shade" />

    <!-- Control buttons panel -->
    <style type="panel" id="colorchooser-buttons" extends="default" padding="5,0,3,0">
        <component>
            <opaque>false</opaque>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebPanelPainter">
            <webColoredBackground>false</webColoredBackground>
        </painter>
    </style>

    <!-- Web-only color check -->
    <style type="checkBox" id="colorchooser-webonly" extends="default" padding="0,5,0,5" />

    <!-- Control buttons buttons -->
    <style type="button" id="colorchooser-button" extends="default" />
    <style type="button" id="colorchooser-ok" extends="colorchooser-button" />
    <style type="button" id="colorchooser-reset" extends="colorchooser-button" />
    <style type="button" id="colorchooser-cancel" extends="colorchooser-button" />

</skin>