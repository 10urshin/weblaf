<skin>

    <!-- com.alee.extended.statusbar.WebMemoryBar -->

    <!-- Memory bar -->
    <style type="panel" id="memorybar">
        <painter class="WebPanelPainter">
            <undecorated>false</undecorated>
        </painter>

        <!-- Information label -->
        <style type="label" id="label">
            <component>
                <opaque>false</opaque>
                <horizontalAlignment>0</horizontalAlignment>
            </component>
        </style>

        <!-- Tooltip label styling -->
        <style type="label" id="tooltip">
            <component>
                <foreground>white</foreground>
            </component>
        </style>

    </style>

</skin>