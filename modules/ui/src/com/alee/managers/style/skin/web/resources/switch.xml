<skin>

    <!-- com.alee.extended.button.WebSwitch -->

    <!-- Switch -->
    <style type="panel" id="wswitch" extends="decorated">
        <component>
            <focusable>true</focusable>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebPanelPainter">
            <round>4</round>
            <paintFocus>true</paintFocus>
        </painter>
    </style>

    <!-- Switch gripper -->
    <style type="panel" id="wswitch-gripper" extends="decorated">
        <painter class="com.alee.managers.style.skin.web.WebPanelPainter">
            <round>1</round>
        </painter>
    </style>

    <!-- Switch state label -->
    <style type="label" id="wswitch" extends="shade">
        <component>
            <foreground>darkGray</foreground>
        </component>
        <ui>
            <padding>2,5,2,5</padding>
        </ui>
    </style>
    <style type="label" id="wswitch-on" extends="wswitch" />
    <style type="label" id="wswitch-off" extends="wswitch" />

</skin>