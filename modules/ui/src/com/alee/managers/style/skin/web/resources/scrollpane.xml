<skin>

    <!-- JScrollPane styling -->
    <style type="scrollpane" id="default">
        <component>
            <background>237,237,237</background>
            <verticalScrollBarPolicy>20</verticalScrollBarPolicy>
            <horizontalScrollBarPolicy>30</horizontalScrollBarPolicy>
        </component>
        <painter id="painter" class="com.alee.managers.style.skin.web.WebScrollPanePainter">
            <round>2</round>
            <shadeWidth>2</shadeWidth>
            <paintBackground>true</paintBackground>
            <webColoredBackground>false</webColoredBackground>
        </painter>
    </style>

    <!-- WebSyntaxScrollPane style -->
    <style type="scrollpane" id="syntax-scroll" extends="default" />

</skin>