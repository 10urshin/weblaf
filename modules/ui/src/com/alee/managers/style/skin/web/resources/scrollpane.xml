<skin>

    <!-- com.alee.laf.scroll.WebScrollPane -->

    <!-- Scroll pane -->
    <style type="scrollPane" id="default">
        <component>
            <opaque>false</opaque>
            <background>237,237,237</background>
            <verticalScrollBarPolicy>20</verticalScrollBarPolicy>
            <horizontalScrollBarPolicy>30</horizontalScrollBarPolicy>
        </component>
        <painter id="painter" class="com.alee.managers.style.skin.web.WebScrollPanePainter">
            <undecorated>false</undecorated>
            <round>2</round>
            <shadeWidth>2</shadeWidth>
            <paintBackground>true</paintBackground>
            <webColoredBackground>false</webColoredBackground>
        </painter>
    </style>

    <!-- Scroll bars -->
    <style type="scrollBar" id="scrollpane" extends="decorated" />
    <style type="scrollBar" id="scrollpane-vertical" extends="scrollpane" />
    <style type="scrollBar" id="scrollpane-horizontal" extends="scrollpane" />

    <!-- Undecorated scroll pane -->
    <style type="scrollPane" id="scrollpane-undecorated" extends="default">
        <painter id="painter" class="com.alee.managers.style.skin.web.WebScrollPanePainter">
            <undecorated>true</undecorated>
        </painter>
    </style>

</skin>