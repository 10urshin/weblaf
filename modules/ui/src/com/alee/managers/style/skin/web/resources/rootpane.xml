<skin>

    <!-- com.alee.laf.rootpane.WebRootPane -->

    <!-- Title panel -->
    <style type="panel" id="window-title" extends="default" padding="4,5,4,10">
        <component>
            <opaque>false</opaque>
        </component>
    </style>

    <!-- Title label -->
    <style type="label" id="window-title" extends="shade" />

    <!-- Custom window decoration control buttons -->
    <style type="button" id="window" extends="default" padding="1,4,1,4">
        <component>
            <focusable>false</focusable>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebButtonPainter">
            <round>6</round>
        </painter>
    </style>
    <style type="button" id="window-minimize" extends="window" />
    <style type="button" id="window-maximize" extends="window" />
    <style type="button" id="window-close" extends="window" />

</skin>