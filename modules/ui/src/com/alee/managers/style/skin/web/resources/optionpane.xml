<skin>

    <!-- com.alee.laf.optionpane.WebOptionPane -->

    <!-- Option pane -->
    <style type="optionPane" id="default" padding="15,15,15,15">
        <opaque>false</opaque>
        <background>237,237,237</background>
    </style>

    <!-- Buttons -->
    <style type="button" id="optionpane" extends="default">
        <painter class="com.alee.managers.style.skin.web.WebButtonPainter">
            <leftRightSpacing>10</leftRightSpacing>
        </painter>
    </style>
    <style type="button" id="optionpane-yes" extends="optionpane" />
    <style type="button" id="optionpane-no" extends="optionpane" />
    <style type="button" id="optionpane-ok" extends="optionpane" />
    <style type="button" id="optionpane-cancel" extends="optionpane" />

</skin>