<skin>

    <!-- com.alee.extended.filechooser.WebFileDrop -->

    <!-- Container panel -->
    <style type="panel" id="filedrop" extends="default">
        <component>
            <background>white</background>
            <focusable>true</focusable>
        </component>
        <painter id="painter" class="com.alee.managers.style.skin.web.WebPanelPainter">
            <margin>2,2,2,2</margin>
        </painter>
    </style>

    <!-- Single file panel -->
    <style type="panel" id="filedrop-plate" extends="default">
        <painter id="painter" class="com.alee.managers.style.skin.web.WebPanelPainter">
            <margin>0,3,0,0</margin>
        </painter>
    </style>

    <!-- Single file name label -->
    <style type="label" id="filedrop-plate-file" extends="default" />

    <!-- Remove file plate button -->
    <style type="button" id="filedrop-plate-remove" extends="default">
        <component>
            <focusable>false</focusable>
        </component>
        <painter id="painter" class="com.alee.managers.style.skin.web.WebButtonPainter">
            <round>2</round>
            <shadeWidth>3</shadeWidth>
            <innerShadeWidth>1</innerShadeWidth>
            <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
        </painter>
    </style>

</skin>