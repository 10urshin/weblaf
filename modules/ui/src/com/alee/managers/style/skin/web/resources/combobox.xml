<skin>

    <!-- com.alee.laf.combobox.WebComboBox -->

    <!-- Selected value label -->
    <style type="label" id="combobox-selected" extends="default">
        <ui>
            <padding>2,2,2,2</padding>
        </ui>
    </style>

    <!-- Arrow button -->
    <style type="button" id="combobox-arrow" extends="default">
        <component>
            <focusable>false</focusable>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebButtonPainter">
            <undecorated>true</undecorated>
            <paintFocus>false</paintFocus>
            <moveIconOnPress>false</moveIconOnPress>
            <leftRightSpacing>3</leftRightSpacing>
        </painter>
    </style>

    <!-- Popup list scrollpane -->
    <style type="scrollPane" id="combobox-list" extends="default">
        <component>
            <opaque>false</opaque>
            <verticalScrollBarPolicy>20</verticalScrollBarPolicy>
            <horizontalScrollBarPolicy>31</horizontalScrollBarPolicy>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebScrollPanePainter">
            <undecorated>true</undecorated>
        </painter>
    </style>

    <!-- Popup list scrollbar -->
    <style type="scrollBar" id="combobox-list" extends="undecorated-buttonless">
        <ui>
            <padding>0,1,0,1</padding>
        </ui>
        <painter base="true" class="com.alee.managers.style.skin.web.WebScrollBarPainter">
            <thumbRound>4</thumbRound>
            <thumbMargin>0,2,0,4</thumbMargin>
            <scrollBarWidth>12</scrollBarWidth>
        </painter>
    </style>

    <!-- Popup list component -->
    <style type="list" id="combobox-list-component" extends="default">
        <painter base="true" class="com.alee.managers.style.skin.web.WebListPainter">
            <decorateSelection>false</decorateSelection>
        </painter>
    </style>

    <!-- Popup list value label -->
    <style type="label" id="combobox-list-cell" extends="default">
        <ui>
            <padding>4,6,4,6</padding>
        </ui>
        <painter class="com.alee.managers.style.skin.web.WebComboBoxElementPainter">
            <topSelectedBackgroundColor>208,208,198</topSelectedBackgroundColor>
            <bottomSelectedBackgroundColor>196,196,186</bottomSelectedBackgroundColor>
        </painter>
    </style>

</skin>