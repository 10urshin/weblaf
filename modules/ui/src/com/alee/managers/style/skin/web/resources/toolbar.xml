<skin>

    <!-- com.alee.laf.toolbar.WebToolBar -->

    <!-- Toolbar -->
    <style type="toolBar">
        <component>
            <orientation>0</orientation>
            <floatable>true</floatable>
        </component>
        <painter class="WebToolBarPainter">
            <undecorated>false</undecorated>
            <round>6</round>
            <shadeWidth>2</shadeWidth>
            <paintBackground>true</paintBackground>
            <webColoredBackground>true</webColoredBackground>
            <spacing>2</spacing>
            <topBgColor>white</topBgColor>
            <bottomBgColor>229,233,238</bottomBgColor>
            <toolbarStyle>standalone</toolbarStyle>
        </painter>
    </style>

    <!-- Attached toolbar -->
    <style type="toolBar" id="attached">
        <painter class="WebToolBarPainter">
            <toolbarStyle>attached</toolbarStyle>
        </painter>
    </style>

    <!-- Separator -->
    <style type="toolBarSeparator">
        <component>
            <opaque>false</opaque>
        </component>
        <painter class="WebToolBarSeparatorPainter">
            <separatorLightUpperColor>255,255,255,5</separatorLightUpperColor>
            <separatorLightColor>white</separatorLightColor>
            <separatorUpperColor>176,182,188,5</separatorUpperColor>
            <separatorColor>176,182,188</separatorColor>
            <reversedColors>false</reversedColors>
            <drawLeadingLine>false</drawLeadingLine>
            <drawTrailingLine>true</drawTrailingLine>
        </painter>
    </style>

</skin>