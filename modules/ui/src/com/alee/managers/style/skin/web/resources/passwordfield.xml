<skin>

    <!-- com.alee.laf.text.WebPasswordField -->

    <!-- Password field -->
    <style type="passwordField" id="default" padding="2,2,2,2">
        <component>
            <opaque>false</opaque>
            <focusable>true</focusable>
            <background>white</background>
            <selectionColor>210,210,210</selectionColor>
            <foreground>black</foreground>
            <selectedTextColor>black</selectedTextColor>
            <caretColor>gray</caretColor>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebPasswordFieldPainter">
            <undecorated>false</undecorated>
            <round>2</round>
            <shadeWidth>2</shadeWidth>
            <paintFocus>true</paintFocus>
            <paintBackground>true</paintBackground>
            <webColoredBackground>false</webColoredBackground>
            <inputPromptPosition>10</inputPromptPosition>
            <inputPromptForeground>160,160,160</inputPromptForeground>
            <hideInputPromptOnFocus>true</hideInputPromptOnFocus>
        </painter>
    </style>

    <!-- Password field undecorated-->
    <style type="passwordField" id="undecorated" extends="default">
        <painter class="com.alee.managers.style.skin.web.WebPasswordFieldPainter">
            <undecorated>true</undecorated>
        </painter>
    </style>

    <!-- Password field unfocusable-->
    <style type="passwordField" id="unfocusable" extends="default">
        <painter class="com.alee.managers.style.skin.web.WebPasswordFieldPainter">
            <paintFocus>false</paintFocus>
        </painter>
    </style>

</skin>