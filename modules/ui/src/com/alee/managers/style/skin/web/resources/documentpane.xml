<skin>

    <!-- com.alee.extended.tab.WebDocumentPane -->

    <!-- WebDocumentPane styling -->
    <style type="panel" id="documentpane" extends="default">
        <component>
            <opaque>false</opaque>
        </component>
    </style>

    <!-- Close document button -->
    <style type="button" id="documentpane-close" extends="icon">
        <painter class="com.alee.managers.style.skin.web.WebButtonPainter">
            <undecorated>true</undecorated>
        </painter>
    </style>

    <!-- WebDocumentPane tab menu styling -->
    <style type="popupMenu" id="documentpane" extends="default">
        <component>
            <focusable>false</focusable>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebPopupMenuPainter">
            <popupStyle>dropdown</popupStyle>
            <cornerAlignment>0</cornerAlignment>
        </painter>
    </style>

</skin>